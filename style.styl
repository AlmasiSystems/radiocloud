@import "~choices.js/assets/styles/css/choices.css"
@import "~plyr/dist/plyr.css"
@import "font/icomoon.css"

$accent = #FF7E50
$thumb-bg = lighten($accent, 40%)
$station-label = #424242

*
  font-smoothing antialiased
  box-sizing border-box

body
  font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-size 16px
  opacity 0

.widget
  width 280px

.player-wrapper
  border-radius 2.5px
  margin-bottom 10px
  border 1px solid #ddd
  overflow auto

  .plyr
    float none

.controls
  display none
  float left
  padding 10px

  button
    float left
    width 32px
    height 32px
    padding 0
    display block
    border-radius 3px
    cursor pointer
    border none
    outline none
    background white
    color #565d64
    transition ,
      background .3s ease,
      color .3s ease,
      opacity .3s ease

    &:hover
      background $accent
      color white

    &:before
      display inline-block
      font-size 24px
      line-height 32px
      vertical-align middle

@media (min-width: 768px)
  .widget
    width 290px
  .player-wrapper .plyr
    float left
  .controls
    display block

.plyr--audio .plyr
  &__controls
    border none

  &__volume
    max-width 160px
    display block

  &__controls button:hover
    background $accent

  &__volume input[type=range]:active
    &::-webkit-slider-thumb
      background $thumb-bg
    &::-moz-range-thumb
      background $thumb-bg
    &::-ms-thumb
      background $thumb-bg

  &__volume--display
    color $accent

.choices__list.choices__list--single
  font-weight bold
  color $station-label
